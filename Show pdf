// src/components/ProgressLog.jsx
import React from 'react';
import './ProgressLog.css';

const ProgressLog = ({ logs }) => {
  return (
    <div className="progress-log">
      <textarea
        className="progress-log-textarea"
        value={logs.join('\n')}
        readOnly
      />
    </div>
  );
};

export default ProgressLog;

###########

/* src/components/ProgressLog.css */
.progress-log {
  margin-top: 20px;
  max-width: 400px;
}

.progress-log-textarea {
  width: 100%;
  height: 200px;
  resize: none;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 10px;
  font-family: Arial, sans-serif;
  font-size: 14px;
  line-height: 1.5;
  overflow-y: auto;
}

