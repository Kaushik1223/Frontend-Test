// src/components/ProgressLog.jsx
import React from 'react';
import './ProgressLog.css';

const ProgressLog = ({ logs = [] }) => { // Default to an empty array if logs is undefined
  return (
    <div className="progress-log">
      <textarea
        className="progress-log-textarea"
        value={logs.length ? logs.join('\n') : 'No logs available'}
        readOnly
      />
    </div>
  );
};

export default ProgressLog;
