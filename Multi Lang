const Modal = ({ show, onClose, message, children }) => {
  if (!show) return null;

  const { t } = useTranslation();

  const handleExport = () => {
    if (!message) {
      console.error("No message to export!");
      return;
    }

    const element = document.createElement("a");
    console.log(message);  // This should output your data or a fallback

    // Ensure message is stringified correctly
    const file = new Blob([JSON.stringify(message, null, 2)], { type: 'text/plain' });

    element.href = URL.createObjectURL(file);
    element.download = "result.txt";
    document.body.appendChild(element);
    element.click();

    // Clean up
    document.body.removeChild(element);
  };

  return (
    <div className="modal">
      {/* Modal Content */}
      {children}
      <button onClick={handleExport}>Export</button>
    </div>
  );
};
