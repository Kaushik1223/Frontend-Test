import React, { useState } from 'react';
import { PDFDocument } from 'pdf-lib';
import { MdOutlineCancel } from "react-icons/md";

const MergeButton = ({ onFileUpload }) => {
  const [selectedFiles, setSelectedFiles] = useState([]);

  const handleFileChange = async (event) => {
    const files = Array.from(event.target.files);

    const pdfDocs = await Promise.all(files.map(async (file) => {
      const existingPdfBytes = await file.arrayBuffer();
      return await PDFDocument.load(existingPdfBytes);
    }));

    setSelectedFiles(pdfDocs);
    onFileUpload(files);  // Pass selected files to the FileUpload component
  };

  const removeFile = (index) => {
    const newSelectedFiles = selectedFiles.filter((_, i) => i !== index);
    setSelectedFiles(newSelectedFiles);
  };

  return (
    <div className="merge-button-section">
      <button onClick={() => document.getElementById('merge-file-input').click()}>
        Select PDFs
      </button>
      <input
        type="file"
        id="merge-file-input"
        style={{ display: 'none' }}
        accept="application/pdf"
        multiple
        onChange={handleFileChange}
      />

      {selectedFiles.length > 0 && (
        <div className="selected-files-list">
          <h4>Selected Files:</h4>
          <ul>
            {selectedFiles.map((pdfDoc, index) => (
              <li key={index}>
                {`PDF ${index + 1}`}
                <button onClick={() => removeFile(index)}><MdOutlineCancel /></button>
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>
  );
};

export default MergeButton;
