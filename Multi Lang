// vite.config.js
import { defineConfig } from 'vite';
import react from '@vitejs/plugin-react';
import fs from 'fs';

// Read the port from the config file
const config = JSON.parse(fs.readFileSync('./config.json', 'utf-8'));

export default defineConfig({
  plugins: [react()],
  server: {
    port: config.port,
  },
});
