import React from 'react';

const Modal = ({ show, onClose, message, children }) => {
  if (!show) return null;

  const { t } = useTranslation();

  // Function to export as JSON
  const handleExportJson = () => {
    if (!message) {
      console.log('No message to export!');
      return;
    }

    const element = document.createElement("a");
    const file = new Blob([JSON.stringify(message, null, 2)], { type: 'application/json' });
    element.href = URL.createObjectURL(file);
    element.download = "result.json";
    document.body.appendChild(element);
    element.click();
  };

  // Function to export as CSV
  const handleExportCsv = () => {
    if (!message) {
      console.log('No message to export!');
      return;
    }

    // Convert JSON to CSV format
    const jsonToCsv = (json) => {
      const headers = Object.keys(json[0]);
      const csvRows = [];

      csvRows.push(headers.join(',')); // Add headers row

      for (const row of json) {
        const values = headers.map(header => {
          const val = row[header];
          return `"${val}"`; // Enclose in double quotes to handle commas
        });
        csvRows.push(values.join(','));
      }

      return csvRows.join('\n');
    };

    const csvContent = jsonToCsv(message); // Assuming message is an array of objects

    // Trigger CSV download
    const element = document.createElement("a");
    const file = new Blob([csvContent], { type: 'text/csv' });
    element.href = URL.createObjectURL(file);
    element.download = "result.csv";
    document.body.appendChild(element);
    element.click();
  };

  return (
    <div className="modal-overlay">
      <div className="modal-content">
        <h2>{t('modal.result')}</h2>
        <div className="modal-body">
          {children}
        </div>
        <div className="modal-buttons">
          <button onClick={onClose} className="close-button">{t('modal.close')}</button>
          <button onClick={handleExportJson} className="export-button">{t('modal.exportJSON')}</button>
          <button onClick={handleExportCsv} className="export-button">{t('modal.exportCSV')}</button>
        </div>
      </div>
    </div>
  );
};

export default Modal;
